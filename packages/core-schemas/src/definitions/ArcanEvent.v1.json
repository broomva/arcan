{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://arcan.ai/schemas/ArcanEvent.v1.json",
  "title": "ArcanEvent",
  "description": "Base schema for all events in the Arcan platform's event-driven architecture",
  "type": "object",
  "required": [
    "eventId",
    "eventType",
    "timestamp",
    "source",
    "schemaVersion",
    "payload"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventType": {
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9._-]*$",
      "description": "Type of event (e.g., 'agent.created', 'workflow.completed', 'spell.invoked')"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the event occurred"
    },
    "source": {
      "$ref": "#/definitions/EventSource"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "description": "Version of the event schema"
    },
    "correlationId": {
      "type": "string",
      "description": "ID for correlating related events across services"
    },
    "causationId": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the event that caused this event"
    },
    "tenantId": {
      "type": "string",
      "description": "Tenant identifier for multi-tenancy"
    },
    "metadata": {
      "$ref": "#/definitions/EventMetadata"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload data",
      "additionalProperties": true
    }
  },
  "definitions": {
    "EventSource": {
      "type": "object",
      "required": ["service", "instanceId"],
      "properties": {
        "service": {
          "type": "string",
          "description": "Name of the service that generated the event"
        },
        "instanceId": {
          "type": "string",
          "description": "Instance ID of the service"
        },
        "agentId": {
          "type": "string",
          "format": "uuid",
          "description": "Agent ID if event was generated by an agent"
        },
        "userId": {
          "type": "string",
          "description": "User ID if event was triggered by user action"
        },
        "apiVersion": {
          "type": "string",
          "description": "API version of the source service"
        }
      },
      "additionalProperties": false
    },
    "EventMetadata": {
      "type": "object",
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["low", "normal", "high", "critical"],
          "default": "normal",
          "description": "Event priority for processing"
        },
        "retryCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of times this event has been retried"
        },
        "ttl": {
          "type": "integer",
          "minimum": 0,
          "description": "Time to live in seconds"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Tags for event categorization"
        },
        "sensitive": {
          "type": "boolean",
          "default": false,
          "description": "Whether this event contains sensitive data"
        },
        "compression": {
          "type": "string",
          "enum": ["none", "gzip", "zstd"],
          "description": "Compression used for payload"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
} 