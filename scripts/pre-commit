#!/usr/bin/env bash
# Pre-commit hook for arcan-rs
# Install: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or run: ./scripts/setup-hooks.sh

set -e

echo "==> Running pre-commit checks..."

# Check formatting
echo "  Checking formatting..."
if ! cargo fmt --all -- --check 2>/dev/null; then
    echo ""
    echo "ERROR: Code is not formatted. Run 'cargo fmt' and re-stage."
    exit 1
fi

# Type check
echo "  Checking compilation..."
if ! cargo check --workspace 2>/dev/null; then
    echo ""
    echo "ERROR: Code does not compile. Fix errors and re-stage."
    exit 1
fi

echo "==> All pre-commit checks passed."
